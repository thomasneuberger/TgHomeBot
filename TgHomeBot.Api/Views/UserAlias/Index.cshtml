@model IEnumerable<TgHomeBot.Charging.Contract.Models.UserAlias>

@{
    ViewData["Title"] = "Benutzer-Aliase verwalten";
}

<h1>Benutzer-Aliase verwalten</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p class="text-muted">
    Verwalten Sie Aliase und Token-IDs für alle erfassten Benutzer von Easee-Ladevorgängen.
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Benutzer-ID</th>
                <th>Alias</th>
                <th>Token-IDs</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.Alias))
                            {
                                <span class="badge bg-primary">@user.Alias</span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Kein Alias</span>
                            }
                        </td>
                        <td>
                            @if (user.TokenIds.Any())
                            {
                                <span class="badge bg-secondary">@user.TokenIds.Count Token(s)</span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Keine Tokens</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-userId="@user.UserId" class="btn btn-sm btn-primary">
                                Bearbeiten
                            </a>
                            @if (!string.IsNullOrEmpty(user.Alias) || user.TokenIds.Any())
                            {
                                <form asp-action="Delete" asp-route-userId="@user.UserId" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" 
                                            onclick="return confirm('Möchten Sie diesen Alias wirklich löschen?');">
                                        Löschen
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        Keine Benutzer gefunden. Benutzer werden automatisch beim Abrufen von Ladevorgängen erfasst.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-controller="Easee" asp-action="Login" class="btn btn-secondary">Zurück zur Easee-Authentifizierung</a>
</div>
